<UserControl x:Class="Luminus.UserControls.FriendListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminus.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="340">
    <Border Margin="5">
        <Grid>
            <Ellipse Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                <Ellipse.Fill>
                    <ImageBrush x:Name="usernameAvatar" />
                </Ellipse.Fill>
            </Ellipse>
            <Label x:Name="usernameLabel" Content="Label" HorizontalAlignment="Left" Margin="70,0,0,0" VerticalAlignment="Center" FontSize="16"/>
        </Grid>
    </Border>
</UserControl>
