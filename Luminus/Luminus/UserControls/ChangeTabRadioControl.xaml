<UserControl x:Name="root" x:Class="Luminus.UserControls.ChangeTabRadioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luminus.UserControls"
             mc:Ignorable="d" 
             Height="auto" Width="auto" FontWeight="SemiBold">
    <Grid>
        <TextBlock x:Name="label" Foreground="{StaticResource ForegroundBrush}" Text="{Binding Label, ElementName=root}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,5,10,10"/>
        <Rectangle x:Name="ind"  Height="2" Fill="{StaticResource ForegroundBrush}" VerticalAlignment="Bottom" Margin="25,0,25,5" RadiusY="1.062" RadiusX="1.062"/>
    </Grid>
</UserControl>
